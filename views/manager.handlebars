        <!-- column 1  -->
        <div class="col s12 m4 l4">

            {{!-- ADD TASK TYPE  --}}
            <div class="card darken-1">
                <div class="card-content teal-text">
                    <span class="card-title">Add Task Type</span>
                </div>
                <form>
                    <div class="input-field">
                        <input class="form-control validate" placeholder="Set up desktop" id="taskName" type="text">
                        <label class="specialText" for="taskName">Task Name</label>
                    </div>
                </form>
                <div class="card-action center-align">
                    <button class="btn btn-blue" id="addTaskButton" type="submit">Submit</button>

                </div>

            </div>
            {{!-- END - ADD TASK TYPE --}}


            <!--  TASK LIST TABLE-->
            <div class="card darken-1">
                <div class="card-content teal-text">
                    <span class="card-title">Task List</span>
                </div>
                <table class="striped centered">
                    <thead>
                        <tr>
                            <th>Task ID</th>
                            <th>Task Name</th>
                        </tr>
                    </thead>
                    <tbody id="containerTaskList">
                    </tbody>
                </table>
            </div>
            <!--  TASK LIST TABLE-->

        </div>
