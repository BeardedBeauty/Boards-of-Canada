        <div class="col s12 m4 l4">

            {{!-- ADD EMPLOYEE --}}
            <div class="card darken-1">
                <div class="card-content teal-text">
                    <span class="card-title">Add Employee</span>
                </div>
                <form>
                    <div class="input-field">
                        <input class="form-control validate" placeholder="John Doe" id="employeeName" type="text">
                        <label for="employeeName">Employee Name:</label>
                    </div>
                    <div class="input-field">
                        <input class="form-control validate" placeholder="2" id="employeeLevel" type="text">
                        <label for="employeeLevel">Employee Level:</label>
                    </div>
                    <div class="input-field">
                        <input class="form-control validate" placeholder="john.doe@tm3k@gmail.com" id="employeeEmail"
                            type="text">
                        <label for="employeeEmail">Employee Email:</label>
                    </div>
                </form>
                <div class="card-action center-align">
                    <button class="btn btn-blue" id="addTaskButton" type="submit">Submit</button>
                </div>

            </div>
            {{!-- end ADD EMPLOYEE --}}


            <!--  EMPLOYEE LIST -->
            <div class="card darken-1">
                <div class="card-content teal-text">
                    <span class="card-title">Employee List</span>
                </div>
                <table class="striped centered">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                        </tr>
                    </thead>
                    <tbody id="containerEmployeeList">
                    </tbody>
                </table>
            </div>
            <!-- end EMPLOYEE LIST-->

